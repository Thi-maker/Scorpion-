-- Variável de controle
local running = false

-- Criar a interface
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ToggleButton = Instance.new("TextButton")
local StatusLabel = Instance.new("TextLabel")
local Signature = Instance.new("TextLabel")
local UICorner = Instance.new("UICorner")
local UICorner2 = Instance.new("UICorner")

-- Configurar ScreenGui
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "FlameToggle"
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

-- Configurar Frame
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.5, -100, 0.1, 0)
Frame.Size = UDim2.new(0, 200, 0, 140)
Frame.Active = true
Frame.Draggable = true

UICorner.Parent = Frame
UICorner.CornerRadius = UDim.new(0, 10)

-- Configurar Label de Status
StatusLabel.Parent = Frame
StatusLabel.BackgroundTransparency = 1
StatusLabel.Position = UDim2.new(0, 0, 0, 15)
StatusLabel.Size = UDim2.new(1, 0, 0, 25)
StatusLabel.Font = Enum.Font.GothamBold
StatusLabel.Text = "Status: DESLIGADO"
StatusLabel.TextColor3 = Color3.fromRGB(255, 85, 85)
StatusLabel.TextSize = 14
StatusLabel.ZIndex = 2

-- Configurar Botão
ToggleButton.Parent = Frame
ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
ToggleButton.BorderSizePixel = 0
ToggleButton.Position = UDim2.new(0, 25, 0, 50)
ToggleButton.Size = UDim2.new(0, 150, 0, 40)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.Text = "LIGAR"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.TextSize = 16
ToggleButton.ZIndex = 2

UICorner2.Parent = ToggleButton
UICorner2.CornerRadius = UDim.new(0, 8)

-- Configurar Assinatura
Signature.Parent = Frame
Signature.BackgroundTransparency = 1
Signature.BorderSizePixel = 0
Signature.Position = UDim2.new(0, 0, 0, 105)
Signature.Size = UDim2.new(1, 0, 0, 30)
Signature.Font = Enum.Font.GothamBold
Signature.Text = "Thi"
Signature.TextColor3 = Color3.fromRGB(255, 215, 0)
Signature.TextSize = 18
Signature.TextStrokeTransparency = 0.5
Signature.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Signature.ZIndex = 2

-- Função principal
local function executeScript()
    while running do
        local success, err = pcall(function()
            game:GetService("Players").LocalPlayer:WaitForChild("Backpack"):WaitForChild("Flame"):WaitForChild("FireServer"):WaitForChild("Event"):FireServer()
        end)
        
        if not success then
            warn("Erro ao executar: " .. tostring(err))
        end
        
        task.wait() -- Executa o mais rápido possível (cerca de 0.03 segundos)
    end
end

-- Função do botão
ToggleButton.MouseButton1Click:Connect(function()
    running = not running
    
    if running then
        -- Ligar
        ToggleButton.Text = "DESLIGAR"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(85, 255, 127)
        StatusLabel.Text = "Status: LIGADO"
        StatusLabel.TextColor3 = Color3.fromRGB(85, 255, 127)
        
        spawn(function()
            executeScript()
        end)
    else
        -- Desligar
        ToggleButton.Text = "LIGAR"
        ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
        StatusLabel.Text = "Status: DESLIGADO"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 85, 85)
    end
end)

print("Flame Toggle carregado! Assinatura: Thi")
